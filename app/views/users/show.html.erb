<div class= "show-box">
  <div class= "box">
    <div class= "q-name">
      <%= @name %>さんの投稿一覧
    </div>
    <% @questions.each do |question| %>
    <div class= "user-text">
      <div class= "rr"><%= question.text %>
        <div class= "date"><%= l question.created_at %>
        </div>
      </div>
    </div>
    <% end %>
    <div class= "answers">
      <h4 class= "an4">＜回答一覧＞</h4>
        <% @answers.each do |answer| %>
          <div class= "text"><%= answer.text %></div>
            <div class= "g">
              <%= l answer.created_at %>
            </div>
          <% end %>
    </div>
  </div>
</div>