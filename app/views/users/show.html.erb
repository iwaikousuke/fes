<div class= "show-box">
  <div class= "box">
    <div class= "q-name">
      <%= @name %>さんの投稿一覧
    </div>
    <% @questions.each do |question| %>
    <div class= "user-text">
      <div class= "rr"><%= question.text %>
        <div class= "date"><%= l question.created_at %>
        </div>
      </div>
    </div>
    <% end %>
    <% @answers.each do |answer| %>
    <%= answer.text %>
    <% end %>
  </div>
</div>